<%= render :partial => 'shared/second_nav', :locals => { :nav_id => 'playlists-logo',
  :url => playlists_path } %>

<a href="#" class="fixed_link" id="collapse_toggle">Collapse/Expand</a>
<a href="#" class="fixed_link requires_edit" id="edit_toggle">Edit/View</a>

<div id="playlist_barcode" class="right_panel">
<%= render :partial => "shared/barcode", :locals => { :object => @playlist } %>
</div>

<div id="playlist" class="singleitem" data-itemid="<%= @playlist.id %>">
  <aside class="toolbar">
    <ul>
      <% if false -%>
      <li class="requires_logged_in">
        <% form_tag(deep_copy_playlist_path(@playlist)) do %>
          <a id="deep-copy-playlist" href="#" class="tooltip" title="Deep Copy"></a>
        <% end -%>
      </li>
      <% end -%>
      <li class="requires_logged_in">
        <%= link_to raw('<span class="icon icon-remix"></span>'), prepare_copy_playlist_path(@playlist), :class => "tooltip link-remix remix-action", :title => "Remix #{@playlist.name}" %>
      </li>
      <li class="requires_logged_in">
        <%= link_to raw('<span class="icon icon-favorite"></span>'), '#', :class => "tooltip link-bookmark bookmark-action", :title => "Bookmark #{@playlist.name}" %>
      </li>
      <li class="requires_logged_in">
        <%= link_to raw('<span class="icon icon-add"></span>'), '#', "data-item_id" => @playlist.id, "data-type" => "playlist", :class => 'link-add tooltip', :title => "Add to a Playlist" %>
      </li>
    </ul>
  </aside>
  <h1><span><%= raw @playlist.name %></span></h1>
  <h3><span>by </span><%= raw @playlist.owners.collect { |u| link_to(u.display, user_path(u)) }.join(', ') %></h3>
  <h5>
  <span class="smaller">Updated at: <%= @playlist.updated_at.to_s(:simpledatetime) %></span>
  <span class="smaller">Created at: <%= @playlist.created_at.to_s(:simpledatetime) %></span>
  </h5>
  <div class="cl"></div>
  
  <div class="details">
    <aside class="buttons">
      <ul>
        <li id="print-container">
          <a href="<%= export_playlist_path(@playlist) %>" class="tooltip link-print" target="_blank" title="Print <%= @playlist.name %>"></a>
        </li>
        <li class="btn-li afterload">
          <a href="#" class="btn-a tooltip" id="fonts" title="Change the size of the text">
            <span>Aa</span>
          </a>
          <div class="popup font-size-popup">
            <select id="font-size">
              <option value="1.0">small</option>
              <option value="1.3">medium</option>
              <option value="1.6">large</option>
              <option value="1.9">extra-large</option>
            </select>
          </div>
        </li>
      </ul>
    </aside>
    <div id="description">
      <%= Playlist.format_content(@playlist.description) %>
    </div>
    <div id="edit_links">
      <%= link_to "EDIT DESCRIPTION, TITLE, NOTES, AND TAGS", edit_playlist_path(@playlist), :class => "edit-action requires_edit smaller" %>
      <a href="#" class="public-notes requires_edit smaller" data-type="public">MAKE NOTES PUBLIC</a>
      <a href="#" class="private-notes requires_edit smaller" data-type="private">MAKE NOTES PRIVATE</a>
    </div>
    <div class="cl"></div>
  </div>
  <%= render :partial => 'playlist_items/playlist_items_block', :locals => {:playlist => @playlist} %>
</div>

<div id="stats" class="right_panel">
  <h3>Playlist Stats</h3>
  <div class="stats_panel">
  <%= render :partial => 'playlist_meta' %>
  </div>
  <%= render :partial => "shared/author_stats", :locals => { :object => @playlist } %>
  <h3>Other Playlists by Author</h3>
  <div class="stats_panel" id="author_playlists">
  <%= render :partial => "partial_results/author_playlists" %>
  </div>
</div>

<div id="edit_item" class="requires_edit right_panel">
  <h3>Edit, Search for and Add Items</h3>
  <div id="search_wrapper_outer">
    <a id="add_item_search" class="no_adjust" href="#">SEARCH</a>
    <div id="select_wrapper">
    <select id="add_item_select">
      <option value="base">all</option>
      <option value="cases">case</option>
      <option value="collages">collage</option>
      <option value="medias">media</option>
      <option value="playlists">playlist</option>
      <option value="text_blocks">text_block</option>
    </select>
    </div>
    <div id="search_wrapper">
    <input id="add_item_term" class="no_adjust" />
    </div>
  </div>
  <%#= link_to 'ADD ITEM +', new_playlist_item_path, :class => 'btn-a new-playlist-item-control' %>
  <div id="add_item_results"></div>
</div>

<div class="cl"></div>

<script type="text/javascript">
var container_id = <%= @playlist.id %>;
var editability_path = "<%= access_level_playlist_path(@playlist) %>"; 
</script>

<%= render :partial => "shared/popup", :locals => { :type => "playlist" } %>
