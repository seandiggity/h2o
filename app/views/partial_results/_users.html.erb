<% @highlighted_users.each do |u| -%>
<div class="user item"><div class="item_wrapper">
  <%= link_to u.display, user_path(u), :class => "user" %>
  <% if u.affiliation.present? -%>
  <span class="affiliation"><%= u.affiliation %></span>
  <% end -%>
  <%= render :partial => "shared/barcode", :locals => { :object => u } %>
</div></div>
<% end -%>
