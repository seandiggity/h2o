<li class="listitem listitem<%= textblock.id %>" id="listitem_text_block<%= textblock.id %>" data-itemid="<%= textblock.id %>">
  <a href="#" class="tooltip list-icon icon icon-textblock" title="Text Block"></a>
	<div class="details">
    <h4>
      <%= link_to textblock.name, text_block_path(textblock), :class => "title" %>
      <%= link_to raw('<span class="icon icon-read"></span><span class="link">READ</span>'), textblock, :class => "action read-action" %>
      <% if current_user && textblock.deleteable? && (@is_admin[:textblock] || @my_belongings[:textblocks].include?(textblock)) %>
        <%= link_to 'DELETE', textblock, :class => "icon icon-delete tooltip", :title => "Delete" %>
      <% end %>
      <% if current_user && (@is_admin[:textblock] || @my_belongings[:textblocks].include?(textblock)) %>
        <%= link_to 'EDIT', edit_text_block_path(textblock), :class => "icon edit-action icon-edit tooltip", :title => "Edit" %>
      <% end %>
    </h4>
    <p>
      <%= textblock.created_at.to_s(:simpledatetime) %>
      <% if textblock.creators -%>
      by
      <%= raw textblock.creators.collect { |u| link_to(u.display, user_path(u)) }.join(',') %>
      <% end -%>
      <% cache "text_block-#{textblock.id}-tags" do %>
      <% if textblock.tag_list.any? -%>
      | <%= raw textblock.tag_list.collect { |tag| link_to(tag, text_block_tag_path(CGI.escape(tag))) }.join(', ') %>
      <% end -%>
      <% end -%>
    </p>
	</div>
  <div class="right_details">
  <div class="barcode_outer">
    <%= render :partial => "shared/barcode", :locals => { :object => textblock } %>
  </div>
	<% if current_user -%>
	<div class="controls">
    <%= link_to raw('<span class="icon icon-collage"></span>COLLAGE THIS'), new_collage_path(:annotatable_type => 'TextBlock', :annotatable_id => textblock), :class => "new-action link-collage" %>
    <a data-item_id="<%= textblock.id %>" data-bookmarktype="item_text_block" data-type="text_block" href="#" class="link-add"><span class="icon icon-add"></span>ADD</a>
    <%= link_to raw('<span class="icon icon-favorite"></span>BOOKMARK'), '#',
      :class => "link-bookmark bookmark-action", 
      "data-itemid" => textblock.id,
      "data-type" => "text_block" %>
	</div>
	<% end -%>
  </div>
	<div class="cl"></div>
</li>
