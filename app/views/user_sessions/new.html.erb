<div class="standard-form">
  <% form_for @user_session, :url => user_session_path do |f| %>
    <%= f.error_messages %>
    <%= f.label :login %>
    <%= f.text_field :login, :class => 'text' %>
    <%= f.label :password %>
    <%= f.password_field :password, :class => 'text' %>
	<div class="remember">
    <%= f.check_box :remember_me %><%= f.label :remember_me %>
	</div>
    <%= f.submit "Login", :class => 'button' %><br />
<% end %>
  <br /><br />
  <%= link_to "If you don't have a login, please register by clicking here.", new_user_path %>
</div>
